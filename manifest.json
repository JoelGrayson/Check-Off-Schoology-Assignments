{
    "name": "Homework Checker (Schoology)",
    "description": "Check off assignments in the schoology calendar view.",
    "version": "2.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "./alter page/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "./alter page/jquery.min.js",
                "./alter page/main.js"
            ],
            "css": [
                "./alter page/check off.css"
            ],
            "run_at": "document_end"
        }
    ],
    "host_permissions": ["<all_urls>"],
    "permissions": ["storage"],
    
    "action": {
        "default_popup": "./popup/index.html",
        "default_icon": {
            "16": "./icons/logo.png",
            "32": "./icons/logo.png",
            "48": "./icons/logo.png",
            "128": "./icons/logo.png"
        }
    },
    "icons": {
        "16": "./icons/logo.png",
        "32": "./icons/logo.png",
        "48": "./icons/logo.png",
        "128": "./icons/logo.png"
    }
}