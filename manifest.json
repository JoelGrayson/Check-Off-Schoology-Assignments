{
    "name": "Homework Checker (Schoology)",
    "description": "Stay organized. Check off assignments like a todo-list.",
    "version": "4.1",
    "manifest_version": 3,
    "author": "Joel Grayson",
    "background": {
        "service_worker": "alter page/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "alter page/injected/jquery.min.js",

                "alter page/pages/SchoologyPage.js",
                "alter page/pages/CalendarPage.js",
                "alter page/pages/CoursePage.js",
                "alter page/pages/collapseOverdue.js",
                "alter page/pages/HomePage.js",
                "alter page/main.js"
            ],
            "css": [
                "alter page/injected/checkmark.css",
                "alter page/injected/style.css"
            ],
            "run_at": "document_end"
        }
    ],
    "host_permissions": ["<all_urls>"],
    "permissions": ["storage"],
    
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": {
            "16": "icons/logo.png",
            "32": "icons/logo.png",
            "48": "icons/logo.png",
            "128": "icons/logo.png"
        }
    },
    "icons": {
        "16": "icons/logo.png",
        "32": "icons/logo.png",
        "48": "icons/logo.png",
        "128": "icons/logo.png"
    }
}